{
  "rewrites": [
    {
      "source": "/read/(.*)",
      "destination": "/read.html?article=$1"
    }
  ],
  "headers": [
    {
      "source": "/pages/(.*\\.md)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}